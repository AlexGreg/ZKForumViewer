<?page title="ZK Forum viewer"?>
<zk>
<style>
/* ==override zk style== */
.z-label {
	font-size: 13px;
}

.z-hlayout-inner {
	vertical-align: middle;
}
/* ==== */

.button {
	width: 22px;
	height: 19px;
	padding: 5px;
	border: 1px solid #ccc;
	border-radius: 5px
}

.collapse_button {
	width: 28px;
	height: 25px;
	padding: 2px;
	border: 1px solid #ccc;
	border-radius: 5px	
}

.textCenter {
	text-align: center;
}

.thread_bold {
	font-size: 14px;
	font-weight: bold;
}

.thread_title {
	font-size: 16px;
	font-weight: bold;
}

.content_header {
	margin: 5px;
}

.content_author {
	float: left;
	font-size: 15px;
	color: #093;
}

.right {
	float: right;
}

.left {
	float: left;
}

.autoSkip {
	display: block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
</style>

<borderlayout apply="org.zkoss.bind.BindComposer" 
 viewModel="@id('vm') @init('org.zkoss.demo.tablet.vm.ThreadViewModel')">
	<west size="30%" border="none" collapsible="true">
		<caption>
			<include src="threadHead.zul" />
		</caption>
		<include src="thread.zul" vflex="1"/>
	</west>
	
	<center border="none">
		<caption>
			<hlayout>
				<image sclass="button"
				 src="data:image/png;base64," />
				<image sclass="button"
				 src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUCAYAAACNiR0NAAAAUUlEQVQ4y2P4//8/AzUxw6iBtDPQIrD3PwgTK060gciasYmR4uX/yAagGfaf3DAkyTBiw/A/DjZFYfgf3bXDMAyxGUrIMFJyClGGjRYOg9RAACVSk51kPAfYAAAAAElFTkSuQmCC" />
				<image sclass="button" onClick='@command("showSetting")'
				 src="data:image/png;base64," />			
			</hlayout>
		</caption>
		<window vflex="1" id="contentPanel" >
			<include vflex="1" src="@load(vm.centerUrl)" />
		</window>
		
	</center>
</borderlayout>
</zk>